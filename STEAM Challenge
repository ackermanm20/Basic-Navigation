#include <kipr/botball.h>

// DECLARE VARIABLES

int l_motor = 0; 
int r_motor = 3; 
int speed = 50;

int main() {

  printf("Starting Run\n");	
  while (1) { 
    forward();
  		if(digital(0)) {
			backward();
    		rightTurn();
          counter = counter ++;
 		 }
  		if(digital(9)){ //if right bumper is hit, turn left
    		backward();
    		leftTurn();
          counter = counter ++;
  		}
}
// functions
void findline(){
printf("Finding line
	while (analog(l_sensor) < 50){
	  forward(); 
}
  ao();
}
  void forward() {
    motor(l_motor,speed);
    motor(r_motor,speed);
  }
  
  void backward() {
      motor(l_motor,-speed);
      motor(r_motor,-speed);
      msleep(pause);
    	ao();
    }
 void rightTurn() {
   		motor(l_motor,turnspeed);
   		motor(r_motor,-turnspeed);
   		msleep(pause);
    counter ++;
  		 ao();
 }
  void leftTurn(){
    motor(r_motor,turnspeed);
    motor(l_motor,-turnspeed);
    msleep(pause);
    counter ++;
    ao();
  }       
